<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel = "stylesheet" href = "https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"/>
        {% endblock %}

        {% block javascripts %}
            <script src =  "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
            <script src = "https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        {% endblock %}
    </head>
    {% block nav %}
        <nav class="navbar navbar-dark navbar-expand-sm bg-dark">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a href="{{ path('admin') }}" class="nav-link">home</a>
                </li>
                {% if app.user %}
                <li class="nav-item">
                    <a href="{{ path('recipe_table') }}" class="nav-link">Recepten</a>
                </li>
                {% endif %}
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    {% if app.user %}
                        <a href="{{ path('app_logout') }}" class="nav-link">logout</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="nav-link">login</a>
                    {% endif %}
                </li>
            </ul>
        </nav>
    {% endblock %}
    <img src="../src/pictures/venezia2.jpg" alt="...">
    <body>
    <div class="container">
        {% block body %}{% endblock %}
    </div>
    </body>
</html>
