<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"/>
    {% endblock %}

    {% block javascripts %}
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    {% endblock %}
</head>
<h1 class="text-center">Venezia ijssalon</h1>
{% block nav %}
    <nav class="navbar navbar-dark navbar-expand-sm bg-dark">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a href="{{ path('admin') }}" class="nav-link">home</a>
            </li>
            {% if app.user %}
                <li class="nav-item">
                    <a href="{{ path('recipe_table') }}" class="nav-link">Recepten</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('fruit_table') }}" class="nav-link">Fruit</a>
                </li>
            {% endif %}
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                {% if app.user %}
                    <a href="{{ path('app_logout') }}" class="nav-link">logout</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="nav-link">login</a>
                {% endif %}
            </li>
        </ul>
    </nav>
{% endblock %}
<img src="{{ asset('pictures/venezia2.jpg') }}" alt="..." class="img-fluid" style="
width: 100%;
user-drag: none;
user-select: none;
-moz-user-select: none;
-webkit-user-drag: none;
-webkit-user-select: none;
-ms-user-select: none;
">
<body>
{% for message in app.session.flashBag.get('success') %}
<div class="alert alert-success">
    {{ message }}
</div>
{% endfor %}
<div class="container">
    {% block body %}{% endblock %}
</div>
</body>
</html>
