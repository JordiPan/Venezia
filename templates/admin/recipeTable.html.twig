{% extends 'base.html.twig' %}
{% block title %}recepten tabel{% endblock %}

{% block body %}
    <h1 class="text-center">Recepten tabel</h1>
    <table class="table table-dark table-bordered">
        <thead>
        <tr>
            <th></th>
            <th>naam</th>
            <th>bereidingswijze</th>
        </tr>
        </thead>
        {% for recipe in recipes %}
        <tr>
            <th><img src="{{ asset( 'fruit/' ~ recipe.fruit.naam ~ '.jpg') }}" alt=""></th>
            <th>{{ recipe.naam }}</th>
            <th>{{ recipe.bereidingswijze }}</th>
        </tr>

        {% endfor %}
    </table>
{% endblock %}